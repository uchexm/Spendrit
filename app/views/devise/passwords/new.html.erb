<%= render 'shared/header', back_link: unauthenticated_root_path, title: "Reset Password" %>

<div class="form-container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: 'form-control' %>
    </div>


      <%= f.submit "Send me reset password link", class: "btn btn-primary", disabled: true %>

  <% end %>

  <div class="form-links">
    <%= render "devise/shared/links" %>
  </div>

</div>